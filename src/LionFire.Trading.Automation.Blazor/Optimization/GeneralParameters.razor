@inherits ReactiveComponentBase<OneShotOptimizeVM>

<MudGrid>
    <MudItem sm="2">
        <MudSelect Label="Bot" @bind-Value="ViewModel!.Common.PBotType" Dense="@true">
            @foreach (var e in ViewModel!.BotTypes)
            {
                <MudSelectItem Value="@e">@e.Name</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem sm="1">
        <MudSelect Label="Exchange" @bind-Value="ViewModel!.Common.Exchange" Dense="@true">
            @foreach (var e in ViewModel!.Exchanges)
            {
                <MudSelectItem Value="@e">@e</MudSelectItem>
            }
        </MudSelect>
    </MudItem>

    <MudItem sm="1">
        <MudSelect Label="Area" @bind-Value="ViewModel!.Common.ExchangeArea">
            <MudSelectItem Value="@("futures")">futures</MudSelectItem>
        </MudSelect>
    </MudItem>

    <MudItem sm="1">
        <MudSelect Label="Symbol" @bind-Value="ViewModel!.Common.Symbol">
            @foreach (var e in ViewModel!.Symbols)
            {
                <MudSelectItem Value="@e">@e</MudSelectItem>
            }
        </MudSelect>
    </MudItem>

    <MudItem sm="1">
        <MudSelect Label="TimeFrame" @bind-Value="ViewModel!.Common.TimeFrameString">
            @foreach (var e in ViewModel!.TimeFrames)
            {
                <MudSelectItem Value="@e">@e</MudSelectItem>
            }
        </MudSelect>
    </MudItem>

    <MudItem sm="2">
        <MudDatePicker @bind-Date="ViewModel!.Common.StartDateTime" Label="Start" Dense="@true" />
    </MudItem>
    <MudItem sm="2">
        <MudDatePicker @bind-Date="ViewModel!.Common.EndExclusiveDateTime" Label="End" Dense="@true" />
        @* <MudDateRangePicker @bind-DateRange="ViewModel!.DateRange" Label="Range" Dense="@true" /> *@
    </MudItem>

</MudGrid>